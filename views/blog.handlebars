<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <span class="dollar-amount">{{body}}</span>
    needed
  </p>
  <p>
    <textarea id="comment-body" name="comment-body" rows="4" cols="50">
</textarea>
    <button class="btn btn-primary">Leave a comment</button>
  </p>
</div>
{{#each comments as |comment| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    A comment should go here
  </div>
</div>
{{/each}}

<script src="/js/comment.js"></script>